<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cool.sarthak.hiii.ChangeStatus">
    <include layout="@layout/app_bar"
        android:id="@+id/registerpagetoolbar"
        />

    <EditText
        android:id="@+id/changestatusstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/registerpagetoolbar"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Status"/>

    <Button
        android:id="@+id/changestatussavechanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/changestatusstatus"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Save changes"
        android:textColor="#ffffff" />


</RelativeLayout>
