<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/msgsinglelayout">

    <ImageView

        android:id="@+id/messagesinglepic"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:visibility="gone"


        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/messagesingle"
        android:background="@drawable/rounder_rect_other"
        android:padding="10dp" />

    <ImageView

        android:id="@+id/messagesinglepic2"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:visibility="gone"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/messagesinglepic"
        android:background="@drawable/rounded_rect"
        android:padding="10dp" />



    <TextView
        android:autoLink="all"
        android:textIsSelectable="true"
        android:id="@+id/messagesingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rounded_rect"
        android:text="your msgs"
        android:visibility="invisible"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView

        android:autoLink="all"
        android:textIsSelectable="true"
        android:id="@+id/messagesingle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/rounder_rect_other"
        android:visibility="invisible"
        android:text="your msgs"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="10dp"/>

</RelativeLayout>