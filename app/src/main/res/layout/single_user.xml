<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ede">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/singleuserdp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/blankprofile" />

    <TextView
        android:id="@+id/singleusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/singleuserdp"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/singleuserstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singleusername"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/singleuserdp"
        android:layout_weight="1"
        android:text="default status"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_below="@id/singleuserstatus"/>



</RelativeLayout>